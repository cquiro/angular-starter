div.container
  div.panel.panel-default
    div.panel-heading
      h2.text-center(translate='REGISTRATION_HEADER')
    form.panel-body(name="registrationForm"
                    ng-submit="regCtrl.submitForm(registrationForm.$valid)"
                    novalidate)

      div.alert-danger.text-center(ng-show="regCtrl.message")
        | {{ regCtrl.message }}

      div.form-group(ng-class="{ 'has-error': registrationForm.name.$invalid && registrationForm.name.$touched }")
        label(for="inputName" translate='NAME')
        input.form-control(type="text"
                           name="name"
                           placeholder="{{ 'NAME' | translate }}"
                           id="inputName"
                           ng-model="regCtrl.form.name"
                           required)
        div.help-block(ng-messages="registrationForm.name.$error"
                       ng-if="registrationForm.name.$touched")
          p(ng-message="required" translate='REQUIRED_NAME_MSG')

      div.form-group(ng-class="{ 'has-error': registrationForm.email.$invalid && registrationForm.email.$touched }")
        label(for="inputEmail")
          | Email
        input.form-control(type="email"
                           name="email"
                           placeholder="Email"
                           id="inputEmail"
                           ng-model="regCtrl.form.email"
                           required)
        div.help-block(ng-messages="registrationForm.email.$error"
                       ng-if="registrationForm.email.$touched")
          p(ng-message="required" translate='REQUIRED_EMAIL_MSG')
          p(ng-message="email" translate='INVALID_EMAIL_MSG')

      div.form-group(ng-class="{ 'has-error': registrationForm.password.$invalid && registrationForm.password.$touched }")
        label(for='inputPassword' translate='PASSWORD')
        input.form-control(type="password"
                           name="password"
                           placeholder="{{ 'PASSWORD' | translate }}"
                           id="inputPassword"
                           ng-model="regCtrl.form.password"
                           ng-minlength="6"
                           ng-maxlength="128"
                           required)
        div.help-block(ng-messages="registrationForm.password.$error"
                       ng-if="registrationForm.password.$touched")
          p(ng-message="required" translate='REQUIRED_PASSWORD_MSG')
          p(ng-message="minlength" translate='SHORT_PASSWORD_MSG')
          p(ng-message="maxlength" translate='LONG_PASSWORD_MSG')

      div.form-group(ng-class="{ 'has-error': registrationForm.passwordConf.$invalid && registrationForm.passwordConf.$touched }")
        label(for="inputPasswordConfirmation" translate='PASSWORD_CONFIRMATION')
        input.form-control(type="password"
                           name="passwordConf"
                           placeholder="{{ 'PASSWORD_AGAIN' | translate }}"
                           id="inputPasswordConfirmation"
                           pw-check="inputPassword"
                           ng-model="regCtrl.form.password_confirmation"
                           ng-minlength="6"
                           ng-maxlength="128"
                           required)
        div.help-block(ng-messages="registrationForm.passwordConf.$error"
                       ng-if="registrationForm.passwordConf.$touched")
          p(ng-message="pwmatch" translate='PASSWORD_NOT_MATCH_MSG')
          p(ng-message="required" translate='REQUIRED_PASSWORD_MSG')
          p(ng-message="minlength" translate='SHORT_PASSWORD_MSG')
          p(ng-message="maxlength" translate='LONG_PASSWORD_MSG')

      button.btn.btn-blue.btn-md(type="submit"
                                 ng-disabled="registrationForm.$invalid"
                                 translate='SIGN_UP')
